@model IEnumerable<Category>


<div class="list-group">

    @foreach (var item in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-id="@item.CategoryId"
        class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == item.CategoryId.ToString() ? "active" : "")">
            @item.CategoryName
        </a>

    }
</div>