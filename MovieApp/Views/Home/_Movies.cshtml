@model IEnumerable<Movie>

<div class="container" id="goLeft">
    @foreach (var item in Model)
    {
        <div class="border rounded mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="@item.ImageUrl" alt="@item.Name" class="card-img">
                </div>

                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">
                                @item.Name
                            </a>
                        </h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">
                            <small class="text-muted">
                                3 days ago.
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>